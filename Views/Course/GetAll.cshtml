<a asp-action="New" asp-controller="Course" class="btn btn-primary btn-lg">New</a>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Min_Degree</th>
            <th scope="col">Max_Degree</th>
            @* <th scope="col">Phone</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var crs in Model)
        {
            <tr>
                <th scope="row">1</th>
                <td>@crs.Name</td>
                <td>@crs.Min_Degree</td>
                <td>@crs.Degree</td>

                <td> <a asp-action="Edit" asp-controller="Course" asp-route-id="@crs.CourseId" class="btn btn-outline-info">Edit </a> </td>
                <td> <a asp-action="Details" asp-controller="Course" asp-route-id="@crs.CourseId" class="btn btn-outline-secondary">Details </a> </td>
                <td> <a asp-action="Delete" asp-controller="Course" asp-route-id="@crs.CourseId" class="btn btn-outline-danger">Delete </a> </td>
            </tr>
        }
    </tbody>
</table>