@model Course
@{
    SelectList deptoptions = new SelectList(ViewBag.dept, "DepartmentId", "Name");
}
<form method="post" asp-action="EditSave" asp-controller="Course">
    <input type="hidden" value="@Model?.CourseId" name="CourseId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Min_Degree"></label>
        <input asp-for="Min_Degree" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Degree"></label>
        <input asp-for="Degree" class="form-control" />
    </div>
    <div>
        <label asp-for="DepartmentId"></label>
        <select class="form-control" asp-for="DepartmentId" asp-items="@deptoptions">
        </select>
    </div>
    <br />
    <br />
    <br />
    <input type="submit" value="Save" class="btn btn-primary" />
</form>
<br />
<a asp-action="GetAll" asp-controller="Course" class="btn btn-dark">Back to list</a>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}