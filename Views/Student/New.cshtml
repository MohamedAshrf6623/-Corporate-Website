@model Student
@{
    SelectList deptoptions = new SelectList(ViewBag.depts, "DepartmentId","Name");
}

<form method="post" asp-action="Save" asp-controller="Student">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" class="form-control" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DepartmentId"></label>
        <select class="form-control" asp-for="DepartmentId" asp-items="@deptoptions">
            <span asp-validation-for="DepartmentId" class="text-danger"></span>

        </select>
    </div>
    <br />
    <br />
    <input type="submit" value="Save" class="btn btn-primary"/>

</form>
<br />
<a asp-action="GetAll" asp-controller="Student" class="btn btn-dark">Back to list</a>
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}